//7  armstrong number//
#include<iostream>
using namespace std;
int main () {
   int num, temp = 5545, rem, sum = 0;
   temp = num;
   while (temp != 0) {
      rem = temp % 10;
      sum = sum + rem*rem*rem;
      temp = temp / 10;
   }
   if (sum == num)
      cout << "\n" << num << " is an Armstrong number.";
   else
      cout << "\n" << num << " is not an Armstrong number.";
   return 0;
}



//8FIBANACCI SERIES//

#include <iostream>
using namespace std;
int main() {
    int num = 15;
 int a = 0, b = 1; 
 int nextTerm;
    for(int i = 1; i < num; i++) {
 nextTerm = a + b;
        a = b;
 b = nextTerm;
        cout << nextTerm << ", ";
 }
return 0;
}

// 9 factorial//
#include <iostream>
using namespace std;
int main(){
    int i, n = 5,fact = 1;
    for(i=1; i<=n; i++)
    { 
        fact*=i;
    }
    cout<<"factorial="<<fact;

    

    return 0;
}


10 GCD & LCM
#include <iostream>
using namespace std;
int main(){
    int i, a = 24,b = 8,lcm,gcd;
    for(i=1;i<=a&&i<b;i++)
    {
        if(a%i == 0 && b%i == 0) 
        gcd = i;
    }
    lcm = (a*b)/gcd;
    cout<<"gcd"<<gcd<<endl;
    cout<<"lcm"<<lcm;
    return 0;
}
// 11 square root//
#include <iostream>
#include <cmath>
using namespace std;
int main(){
    int a,num = 9;
    a = sqrt(num);
    cout<<"the value of a"<<" "<<a;
    return 0;
}


//sum of digits//
#include<iostream>
using namespace std;
int main() {
  int x, s = 0;
  cout << "Enter the number : ";
  cin >> x;
  while (x != 0) {
    s = s + x % 10;
    x = x / 10;
  }
  cout << "\nThe sum of the digits : "<< s;
}

//positive or nagetive//
#include<iostream>
using namespace std;

int main() {
    int num;
    cout << "Enter the number to be checked : ";
    cin >> num;
    if (num >= 0)
        cout << num << " is a positive number.";
    else
        cout << num << " is a negative number.";
    return 0;
}
